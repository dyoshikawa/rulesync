{
  "permissions": {
    "deny": [
      "Bash(rm -rf ~/**)",
      "Bash(rm -rf //**)",
      "Bash(git remote add:*)",
      "Bash(git remote set-url:*)",
      "Bash(npm publish:*)",
      "Bash(pnpm publish:*)"
    ],
    "allow": [],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "pnpx ccusage statusline --no-offline",
    "padding": 0
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "DISABLE_AUTOUPDATER": "0"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker", "git"],
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  }
}