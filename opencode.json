{
  "$schema": "https://opencode.ai/config.json",
  "lsp": false,
  "provider": {
    "openrouter": {
      "models": {
        "openai/gpt-5.2": {},
        "openai/gpt-5.1-codex": {},
        "openai/gpt-5.1": {},
        "anthropic/claude-haiku-4.5": {}
      }
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "openrouter/z-ai/glm-4.7",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "openrouter/z-ai/glm-4.7",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--project",
        "."
      ],
      "enabled": true,
      "environment": {}
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "environment": {}
    },
    "rulesync": {
      "type": "local",
      "command": [
        "pnpm",
        "dev",
        "mcp"
      ],
      "enabled": true,
      "environment": {}
    }
  }
}
