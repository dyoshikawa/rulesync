{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx"
      ],
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--project",
        "."
      ],
      "environment": {},
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx"
      ],
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "environment": {},
      "enabled": true
    }
  }
}
